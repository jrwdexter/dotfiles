#!/usr/bin/env bash
sway_colors_file="$HOME/.config/sway/colors"
colors="$(<"$sway_colors_file")"

export xbg="$(grep -m 1 'set $xbg ' <<< "$colors" | awk '{print $3}')"
export xfg="$(grep -m 1 'set $xfg ' <<< "$colors" | awk '{print $3}')"
export x0="$(grep -m 1 'set $x0 ' <<< "$colors" | awk '{print $3}')"
export x1="$(grep -m 1 'set $x1 ' <<< "$colors" | awk '{print $3}')"
export x2="$(grep -m 1 'set $x2 ' <<< "$colors" | awk '{print $3}')"
export x3="$(grep -m 1 'set $x3 ' <<< "$colors" | awk '{print $3}')"
export x4="$(grep -m 1 'set $x4 ' <<< "$colors" | awk '{print $3}')"
export x5="$(grep -m 1 'set $x5 ' <<< "$colors" | awk '{print $3}')"
export x6="$(grep -m 1 'set $x6 ' <<< "$colors" | awk '{print $3}')"
export x7="$(grep -m 1 'set $x7 ' <<< "$colors" | awk '{print $3}')"
export x8="$(grep -m 1 'set $x8 ' <<< "$colors" | awk '{print $3}')"
export x9="$(grep -m 1 'set $x9 ' <<< "$colors" | awk '{print $3}')"
export x10="$(grep -m 1 'set $x10 ' <<< "$colors" | awk '{print $3}')"
export x11="$(grep -m 1 'set $x11 ' <<< "$colors" | awk '{print $3}')"
export x12="$(grep -m 1 'set $x12 ' <<< "$colors" | awk '{print $3}')"
export x13="$(grep -m 1 'set $x13 ' <<< "$colors" | awk '{print $3}')"
export x14="$(grep -m 1 'set $x14 ' <<< "$colors" | awk '{print $3}')"
export x15="$(grep -m 1 'set $x15 ' <<< "$colors" | awk '{print $3}')"
